{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "rules": [
    {
      "name": "Service layer must use neverthrow Result type",
      "path": "electron/module/**/service.ts",
      "enforceResult": true,
      "apply": "async-functions",
      "exceptions": [
        "getAppVersion",
        "clearMigrationCache",
        "clearAllStoredSettings",
        "clearStoredSetting",
        "getApplicationLogPath",
        "showSavePngDialog",
        "createVRChatWorldJoinLogFromPhoto",
        "findVRChatWorldJoinLogFromPhotoList",
        "findVRChatWorldJoinLogList",
        "syncLogsInBackground",
        "processQueue",
        "getVrcUserInfoByUserName"
      ]
    }
  ],
  "mustUseResult": {
    "enabled": true,
    "path": "electron/**/*.ts"
  },
  "tryCatchWarning": {
    "enabled": true,
    "path": "electron/**/*.ts",
    "exceptions": {
      "allowWithFinally": true,
      "allowInsideFromPromise": true,
      "allowWithRethrow": true,
      "allowElectronEnvDetection": true,
      "allowLogAndFallback": false,
      "allowReturnErrOnCatch": false,
      "allowMatchWithFallback": false
    }
  },
  "genericErrorWarning": {
    "enabled": true,
    "path": "electron/**/*.ts"
  }
}
