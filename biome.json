{
  "$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUndeclaredVariables": "error",
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "off",
        "noUnusedImports": "off"
      },
      "complexity": {
        "noUselessUndefinedInitialization": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    },
    "globals": [
      "it",
      "describe",
      "expect",
      "jest",
      "beforeEach",
      "beforeAll",
      "afterEach",
      "afterAll",
      "__SENTRY_RELEASE__"
    ]
  },
  "files": {
    "experimentalScannerIgnores": [
      "**/node_modules/**",
      "**/dist/**",
      "**/main/**",
      "**/out/**",
      "**/coverage/**",
      "**/build/**",
      "**/playwright-report/**",
      "**/blob-report/**",
      "**/playwright/.cache/**",
      "package.json"
    ]
  }
}
