{
  "image": "mcr.microsoft.com/devcontainers/base:bookworm",

  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  "mounts": [
    "source=${localWorkspaceFolderBasename}-pnpm-store,target=${containerWorkspaceFolder}/.pnpm-store,type=volume"
  ],

  "features": {
    // "ghcr.io/devcontainers/features/docker-in-docker:2": {
    //   "version": "latest",
    //   "enableNonRootDocker": "true",
    //   "moby": "true"
    // },
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers-extra/features/mise:1": {},
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "webPort": "6080",
      "vncPort": "5901"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "mhutchie.git-graph",
        "steoates.autoimport",
        "editorconfig.editorconfig",
        "WakaTime.vscode-wakatime",
        "nemesv.copy-file-name"
      ],
      "settings": {
        "files.watcherExclude": {
          "**/.git/objects/**": true,
          "**/.git/subtree-cache/**": true,
          "**/.git/modules/**": true,
          "**/node_modules/**": true,
          "**/.pnpm/**": true,
          "**/.pnpm-store/**": true,
          "**/.turbo/**": true
        },
        "search.exclude": {
          "**/node_modules": true,
          "**/.pnpm": true,
          "**/.pnpm-store": true,
          "**/.git": true,
          "**/.turbo": true
        }
      }
    }
  },
  "forwardPorts": [6080],
  "portsAttributes": {
    "6080": {
      "label": "desktop"
    }
  },
  "runArgs": [
    "--shm-size=2g",
    "--memory=8g",
    "--memory-swap=16g",
    "--env-file",
    ".devcontainer/devcontainer.env"
  ],
  "containerEnv": {
    "VNC_RESOLUTION": "1920x1080x24"
  },
  "onCreateCommand": {
    "install-packages": [
      "bash",
      "-c",
      "set -e; sudo apt-get update && sudo apt-get install -y build-essential fzf ripgrep bc gpg ca-certificates curl"
    ]
  },
  "updateContentCommand": {
    "add-node-gpg-key-mise": [
      "bash",
      "-c",
      "set -e; curl -fsSL https://raw.githubusercontent.com/nodejs/release-keys/b362bd15f2ac7ce350d7563fc03e0c625e455e5f/cli.sh | bash -s import"
    ],
    "setup-mise-bash": [
      "bash",
      "-c",
      "echo 'eval \"$(mise activate bash)\"' >> ~/.bashrc"
    ],
    "trust-mise": ["mise", "trust"]
  },
  "postCreateCommand": {
    "mise-install": "mise install",
    "install-grit": "curl -fsSL https://docs.grit.io/install | bash"
  },
  "postStartCommand": {
    "setup-chrome-devtools-mcp": [
      "bash",
      "-lc",
      ".devcontainer/setup-chrome-devtools-mcp.sh"
    ],
    "mise-upgrade": ["mise", "upgrade"]
  }
}
