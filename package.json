{
  "name": "vrchat-albums",
  "version": "0.25.1",
  "main": "main/index.cjs",
  "author": {
    "name": "tktcorporation"
  },
  "description": "VRChatで撮影した写真を整理・管理するためのデスクトップアプリケーションです。VRChatのログファイルと写真を自動的に関連付けて、いつ、どのワールドで撮影したかを簡単に確認できます。",
  "keywords": [
    "vite",
    "react",
    "electron",
    "typescript"
  ],
  "repository": {
    "url": "https://github.com/tktcorporation/vrchat-albums"
  },
  "productName": "VRChatAlbums",
  "type": "module",
  "workspaces": [
    "pages"
  ],
  "scripts": {
    "postinstall": "simple-git-hooks && pnpm run license-check:generate && pnpm run rebuild-native && bash scripts/ensure-grit.sh",
    "rebuild-native": "npx @electron/rebuild -f -w clip-filepaths",
    "setup:debug": "bash debug/genDevFiles.sh",
    "generate:debug-data": "tsx scripts/generate-debug-data.mts",
    "generate:icons": "tsx scripts/generate-platform-icons.ts",
    "dev": "SENTRY_DSN='' ./scripts/dev.sh",
    "dev:vite": "vite",
    "dev:electron": "vite build -c electron/vite.config.ts && electron . --disable-gpu",
    "dev:landing": "pnpm --filter @vrchat-albums/landing-page dev",
    "build:landing": "pnpm --filter @vrchat-albums/landing-page build",
    "build": "run-s lint:type-check build:vite build:electron",
    "build:vite": "vite build",
    "build:electron": "vite build -c electron/vite.config.ts",
    "build:electron:tsc": "tsc -p electron",
    "build:electron:watch": "vite build -c electron/vite.config.ts --watch",
    "dist": "run-s clean:build build \"electron-dist -- --publish never\"",
    "pack": "run-s clean:build build \"electron-dist -- --dir\"",
    "publish": "run-s clean:build build \"electron-dist -- --publish always\"",
    "electron-dist": "NODE_ENV=production electron-builder --config=electron-builder.cjs",
    "clean:build": "rimraf dist main src/out",
    "update-changelog": "git-cliff -c ./cliff.toml -o CHANGELOG.md",
    "clean:debug": "bash debug/cleanDevFiles.sh",
    "find-deadcode": "ts-prune",
    "license-check:generate": "node scripts/generate-licenses.mjs",
    "license-check:validate": "license-checker --production --failOn 'GPL;GPL-2.0;GPL-3.0;LGPL;LGPL-3.0;AGPL;AGPL-3.0;AGPL-3.0-only;'",
    "test": "vitest run",
    "test:web": "vitest run --project web",
    "test:electron": "vitest run --project electron",
    "test:playwright": "SENTRY_DSN='' run-s build \"playwright:setup-and-run\" sync-landing-images",
    "playwright:setup-and-run": "playwright install --with-deps && playwright test --timeout=60000",
    "sync-landing-images": "bash scripts/sync-landing-images.sh",
    "lint": "run-p lint:biome lint:type-check lint:actionlint lint:valueobjects lint:neverthrow lint:grit lint:node-types lint:jsdoc-see lint:ts-pattern lint:logger-level lint:floating-promises",
    "lint:valueobjects": "tsx scripts/lint-valueobjects.ts",
    "lint:valueobjects:grit": "run-p \"lint:valueobjects:grit:*\"",
    "lint:valueobjects:grit:export": "PATH=\"$HOME/.grit/bin:$PATH\" grit apply valueobject_export electron/ src/ --dry-run",
    "lint:valueobjects:grit:schema": "PATH=\"$HOME/.grit/bin:$PATH\" grit apply valueobject_schema electron/ src/ --dry-run",
    "lint:neverthrow": "tsx scripts/lint-neverthrow.ts",
    "lint:node-types": "tsx scripts/lint-node-types.ts",
    "lint:jsdoc-see": "tsx scripts/lint-jsdoc-see.ts",
    "lint:ts-pattern": "tsx scripts/lint-ts-pattern.ts",
    "lint:logger-level": "tsx scripts/lint-logger-level.ts",
    "lint:floating-promises": "tsx scripts/lint-floating-promises.ts",
    "lint:neverthrow:grit": "run-p \"lint:neverthrow:grit:*\"",
    "lint:neverthrow:grit:async": "PATH=\"$HOME/.grit/bin:$PATH\" grit apply neverthrow_async electron/module/**/service.ts --dry-run",
    "lint:neverthrow:grit:catch": "PATH=\"$HOME/.grit/bin:$PATH\" grit apply neverthrow_catch electron/module/**/service.ts --dry-run",
    "lint:grit": "run-p \"lint:grit:*\"",
    "lint:grit:valueobject": "run-p \"lint:valueobjects:grit:*\"",
    "lint:grit:neverthrow": "run-p \"lint:neverthrow:grit:*\"",
    "lint:grit:electron": "PATH=\"$HOME/.grit/bin:$PATH\" grit apply electron_toplevel_import electron/module/ --dry-run",
    "lint:grit:stacktrace": "PATH=\"$HOME/.grit/bin:$PATH\" grit apply stack_trace_preservation electron/ --dry-run",
    "lint:grit:logsync": "PATH=\"$HOME/.grit/bin:$PATH\" grit apply log_sync_direct_call electron/module/ --dry-run",
    "lint:biome": "biome check .",
    "lint:type-check": "run-p lint:type-check:tsgo:electron lint:type-check:tsgo:src",
    "lint:type-check:tsc": "run-p lint:type-check:tsc:electron lint:type-check:tsc:src",
    "lint:type-check:tsc:electron": "tsc --noEmit -p electron",
    "lint:type-check:tsc:src": "tsc --noEmit",
    "lint:type-check:tsgo": "run-p lint:type-check:tsgo:electron lint:type-check:tsgo:src",
    "lint:type-check:tsgo:electron": "tsgo --noEmit -p electron",
    "lint:type-check:tsgo:src": "tsgo --noEmit",
    "lint:actionlint": "npx @tktco/node-actionlint",
    "lint:fix": "run-s \"lint:fix:biome\" lint:type-check",
    "lint:fix:biome": "biome check --write --unsafe .",
    "lint:fix:tsc": "run-s \"lint:fix:biome\" lint:type-check:tsc",
    "sentry:sourcemaps": "run-s sentry:sourcemaps:electron sentry:sourcemaps:vite",
    "sentry:sourcemaps:electron": "sentry-cli sourcemaps inject --org $SENTRY_ORG --project $SENTRY_PROJECT --release $SENTRY_RELEASE ./main && sentry-cli sourcemaps upload --org $SENTRY_ORG --project $SENTRY_PROJECT --release $SENTRY_RELEASE ./main",
    "sentry:sourcemaps:vite": "sentry-cli sourcemaps inject --org $SENTRY_ORG --project $SENTRY_PROJECT --release $SENTRY_RELEASE ./src/out && sentry-cli sourcemaps upload --org $SENTRY_ORG --project $SENTRY_PROJECT --release $SENTRY_RELEASE ./src/out",
    "knip": "knip --config knip.config.ts"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint:biome && pnpm lint:type-check",
    "prepare-commit-msg": "bash scripts/hooks/prepare-commit-msg.sh"
  },
  "pnpm": {
    "overrides": {
      "cacache>glob": "10.5.0"
    },
    "onlyBuiltDependencies": [
      "@sentry/cli",
      "electron",
      "electron-winstaller",
      "esbuild",
      "sharp",
      "simple-git-hooks",
      "sqlite3"
    ]
  },
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": "22",
    "pnpm": ">=10"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "1.3.3",
    "@radix-ui/react-context-menu": "~2.2.16",
    "@radix-ui/react-dialog": "~1.1.15",
    "@radix-ui/react-label": "~2.1.8",
    "@radix-ui/react-scroll-area": "~1.2.10",
    "@radix-ui/react-slot": "~1.2.4",
    "@radix-ui/react-switch": "~1.2.6",
    "@radix-ui/react-toast": "~1.2.15",
    "@sentry/cli": "~3.0.3",
    "@sentry/electron": "~7.5.0",
    "@sentry/vite-plugin": "^4.7.0",
    "@sequelize/core": "7.0.0-alpha.47",
    "@sequelize/sqlite3": "7.0.0-alpha.47",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "^5.90.19",
    "@tanstack/react-virtual": "~3.13.18",
    "@trpc/client": "^11.8.1",
    "@trpc/react-query": "^11.8.1",
    "@trpc/server": "^11.8.1",
    "@vitejs/plugin-react": "5.1.2",
    "class-variance-authority": "0.7.1",
    "clip-filepaths": "^0.3.0",
    "clsx": "2.1.1",
    "consola": "~3.4.2",
    "date-fns": "^4.1.0",
    "electron-log": "5.4.3",
    "electron-store": "8",
    "electron-unhandled": "4",
    "electron-updater": "6.6.2",
    "exiftool-vendored": "^34.3.0",
    "glob": "^13.0.0",
    "hash-wasm": "^4.12.0",
    "jotai": "~2.16.2",
    "lucide-react": "^0.562.0",
    "neverthrow": "8.2.0",
    "ofetch": "~1.5.1",
    "p-queue": "~9.0.1",
    "pathe": "2.0.3",
    "pony-cause": "2.1.11",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-error-boundary": "^6.1.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "rxjs": "~7.8.2",
    "sharp": "0.34.5",
    "superjson": "2.2.6",
    "tailwind-merge": "3.4.0",
    "tailwindcss": "^4.1.18",
    "trpc-electron": "^0.1.2",
    "ts-pattern": "5.9.0",
    "tw-animate-css": "^1.4.0",
    "ufo": "~1.6.3",
    "uuidv7": "~1.1.0",
    "vite": "^7.3.1",
    "zod": "~4.3.5",
    "zustand": "5.0.9"
  },
  "devDependencies": {
    "@antfu/ni": "^28.2.0",
    "@biomejs/biome": "2.3.10",
    "@electron/rebuild": "^4.0.2",
    "@playwright/test": "1.57.0",
    "@testing-library/dom": "~10.4.1",
    "@testing-library/react": "~16.3.2",
    "@tktco/node-actionlint": "~1.6.0",
    "@types/license-checker": "25.0.6",
    "@types/node": "~22.15.35",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@typescript/native-preview": "~7.0.0-dev.20260120.1",
    "@vitest/coverage-v8": "^4.0.17",
    "@welldone-software/why-did-you-render": "^10.0.1",
    "autoprefixer": "10.4.23",
    "electron": "39",
    "electron-builder": "^26.4.0",
    "git-cliff": "~2.11.0",
    "jsdom": "~27.4.0",
    "knip": "5.78.0",
    "license-checker": "25.0.1",
    "minimatch": "^10.1.1",
    "npm-run-all2": "~8.0.4",
    "playwright": "1.57.0",
    "postcss": "8.5.6",
    "rimraf": "6.1.2",
    "simple-git-hooks": "2.13.1",
    "ts-prune": "0.10.3",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "uuid": "^13.0.0",
    "vitest": "^4.0.17"
  }
}
