{
  "mcpServers": {
    "chrome-devtools": {
      "type": "stdio",
      "command": "bash",
      "args": [".devcontainer/run-chrome-devtools-mcp.sh"],
      "env": {}
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "env": {}
    },
    "ide": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@anthropic-ai/ide-mcp@latest"],
      "env": {}
    }
  }
}
